{
  "manifest_version": 3,
  "name": "Pomodoro",
  "version": "1.0.0",
  "description": "Focus on your tasks easily",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    },
    "default_title": "Pomodoro Timer",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  }
}
